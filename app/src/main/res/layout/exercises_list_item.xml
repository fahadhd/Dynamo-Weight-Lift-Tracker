<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_workout"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:gravity="center_vertical">
    <!-- Workout Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exercises_item_name"
        android:text="Workout Name"
        android:paddingTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <!-- _______________Sets X Reps_______________ -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exercises_item_name"
        android:paddingTop="10dp"
        android:id="@+id/exercises_item_routine">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exercises_item_sets"
        android:text="5"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exercises_item_separator"
        android:layout_toRightOf="@+id/exercises_item_sets"
        android:layout_toEndOf="@+id/exercises_item_sets"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:text="X"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exercises_item_reps"
        android:layout_toRightOf="@+id/exercises_item_separator"
        android:layout_toEndOf="@+id/exercises_item_separator"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:text="5"

        />
    </RelativeLayout>


    <!-- _______________UserWeight_______________ -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:id="@+id/exercises_item_weight"
        android:layout_below="@+id/exercises_item_routine"
        android:text="User Weight"/>

    <!-- _______________First Set of Buttons_______________ -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exercises_buttons_first_set"
        android:layout_toRightOf="@+id/exercises_item_routine"
        android:layout_toEndOf="@+id/exercises_item_routine"
        android:orientation="horizontal"
        ></LinearLayout>

    <!-- _______________First Set of Buttons_______________
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/exercises_item_routine"
        android:layout_toRightOf="@+id/exercises_item_name"
        android:layout_toEndOf="@+id/exercises_item_name" />
            -->

</RelativeLayout>