<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_workout"

    android:gravity="center_vertical">
    <!-- Workout Name and Number -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exercises_item_name"
        android:paddingTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exercises_item_order"
        android:paddingTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toRightOf="@+id/exercises_item_name"
        android:layout_toEndOf="@+id/exercises_item_name"
        />

    <!-- _______________Sets X Reps_______________ -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exercises_item_name"
        android:paddingTop="10dp"
        android:id="@+id/exercises_item_routine">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exercises_item_sets"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exercises_item_separator"
        android:layout_toRightOf="@+id/exercises_item_sets"
        android:layout_toEndOf="@+id/exercises_item_sets"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exercises_item_reps"
        android:layout_toRightOf="@+id/exercises_item_separator"
        android:layout_toEndOf="@+id/exercises_item_separator"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"

        />
    </RelativeLayout>


    <!-- _______________UserWeight_______________ -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:id="@+id/exercises_item_weight"
        android:layout_below="@+id/exercises_item_routine" />

    <!-- _______________First Set of Buttons_______________ -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_container_set_1"
        android:layout_toRightOf="@+id/exercises_item_routine"
        android:layout_toEndOf="@+id/exercises_item_routine"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:orientation="horizontal">

    </LinearLayout>

    <!-- _______________Second Set of Buttons_______________ -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_container_set_2"
        android:layout_toRightOf="@+id/exercises_item_routine"
        android:layout_toEndOf="@+id/exercises_item_routine"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_below="@+id/button_container_set_1"
        android:orientation="horizontal">

    </LinearLayout>




</RelativeLayout>