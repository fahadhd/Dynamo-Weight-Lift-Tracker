<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/workout_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:theme="@style/WorkoutDialogCustom"
    android:minHeight="150dp">
    <EditText
        android:id="@+id/workout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Input Exercise Name Here          "
        android:textSize="18sp"
        android:gravity="center"
        android:inputType="textCapWords"
        android:imeOptions="actionDone"
        android:cursorVisible="false"
        android:paddingTop="20dp"
        />


    <TextView
        android:id="@+id/lift_weight_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workout_name"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:text="Lift Weight"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/sets_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="145dp"
        android:layout_below="@+id/workout_name"
        android:gravity="center"
        android:text="Sets"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sets_title"
        android:layout_marginLeft="55dp"
        android:layout_alignBaseline="@+id/lift_weight"
        android:layout_below="@+id/sets_title"
        android:textSize="20sp"
        android:text="X"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/workout_name"
        android:id="@+id/reps_title"
        android:gravity="center"
        android:text="Reps"
        android:textColor="@color/white"/>


    <EditText
        android:id="@+id/lift_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lift_weight_title"
        android:layout_marginLeft="45dp"
        android:textSize="20sp"
        android:hint="185"
        android:inputType="number"
        android:imeOptions="actionDone"
        />
    <Spinner
        android:id="@+id/sets_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sets_title"
        android:layout_alignBaseline="@+id/lift_weight"
        android:layout_marginLeft="140dp"
        />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reps_title"
        android:layout_alignBaseline="@id/lift_weight"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:id="@+id/reps_choice"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sets_choice"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/dialog_delete"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@android:color/holo_red_light"
           android:text="Delete"/>
        <Button
            android:id="@+id/dialog_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Cancel"/>
        <Button
            android:id="@+id/dialog_ok"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="OK"/>
    </LinearLayout>


</RelativeLayout>
